<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:innerRadius="5dp"
            android:shape="ring"
            android:thickness="10dp"
            android:useLevel="false" >
            <solid android:color="#FFE0E0DE" />

            <size
                android:height="35dp"
                android:width="35dp" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval"
            android:useLevel="false" >
            <gradient
                android:angle="90"
                android:endColor="#FFFFFFFF"
                android:startColor="#FF000000" />

            <size
                android:height="5dp"
                android:width="5dp" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval"
            android:useLevel="false" >
            <solid android:color="#FFFF0000" />

            <size
                android:height="15dp"
                android:width="15dp" />
        </shape>
    </item>

</layer-list>