<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="1 week left"
        android:textSize="24sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/ticket_battery_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_new_battery" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ticket_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="24"
                android:textColor="@color/EL_white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ticket_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="May"
                android:textColor="@color/EL_white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Payment methods:"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:background="@drawable/btn_payment_left"
            android:contentDescription="Button for paying with sms"
            android:onClick="onSMS"
            android:src="@drawable/ic_sms" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/EL_button_divider" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:background="@drawable/btn_payment_middle"
            android:contentDescription="Button for paying with card"
            android:onClick="onCard"
            android:src="@drawable/ic_creditcard" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/EL_button_divider" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:background="@drawable/btn_payment_right"
            android:contentDescription="Button for paying with coins"
            android:onClick="onCoin"
            android:src="@drawable/ic_coin" />
    </LinearLayout>

</LinearLayout>